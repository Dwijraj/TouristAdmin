<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:weightSum="100"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.firebase.pass.passadmin.MainActivity">

    <LinearLayout
        android:layout_weight="20"
        android:weightSum="100"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:layout_weight="70"
            android:id="@+id/CHANGE_GATE_PASSWORD_ID"
            android:layout_width="0dp"
            android:text="Change GATE PASSWORD"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_weight="20"
        android:weightSum="100"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="50"
            android:weightSum="100"
            android:gravity="center"
            android:layout_height="0dp">

            <EditText
                android:id="@+id/PASS_NUMBER_ID"
                android:hint="ENTER PASS NUMBER"
                android:background="#ffff"
                android:layout_weight="60"
                android:layout_width="0dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="0dp"
                android:id="@+id/CLEAR_VIEW_IMAGE"
                android:layout_weight="9"
                android:background="@mipmap/ic_assignment_turned_in_white_24dp"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="100"
            android:gravity="center"
            android:layout_weight="50"
            android:layout_height="0dp">
            <Button
                android:text="VIEW PASS"
                android:layout_weight="70"
                android:id="@+id/VIEW_PASS_ID"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="20"
        android:weightSum="100"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp">



        <Button
            android:id="@+id/AUTHENTICATE_USER_ID"
            android:text="AUTHENTICATE A GAURD"
            android:layout_weight="70"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


    </LinearLayout>


</LinearLayout>
